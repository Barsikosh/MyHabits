<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_navigation"
    app:startDestination="@id/viewPagerFragment">
    <fragment
        android:id = "@+id/habits"
        android:name = "com.example.task3.Fragments.HabitListFragment"
        tools:layout = "@layout/habits_fragment">
    </fragment>


    <fragment
        android:id = "@+id/redactor"
        android:name = "com.example.task3.Fragments.HabitRedactorFragment"
        tools:layout = "@layout/redactor_fragment"
        >
        <action
            android:id = "@+id/action_go_home"
            app:destination = "@+id/last_page_fragment" />
        <action
            android:id="@+id/action_redactor_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
    </fragment>


    <fragment
        android:id = "@+id/viewPagerFragment"
        android:name = "com.example.task3.ViewPagerFragment"
        tools:layout = "@layout/view_pager">

        <action
            android:id = "@+id/action_go_home"
            app:destination="@id/habits" />
        <action
            android:id="@+id/action_goto_redactor"
            app:destination="@id/redactor">

        </action>

    </fragment>
</navigation>